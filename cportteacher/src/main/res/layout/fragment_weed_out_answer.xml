<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="910">

    <RelativeLayout
        android:id="@+id/rl_main_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="640"></RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="270"
        android:orientation="horizontal">

        <include
            android:id="@+id/include_two_button_bottom"
            layout="@layout/mx_include_two_button_layout_bottom"
            android:visibility="gone" />

        <include
            android:id="@+id/include_one_button_bottom"
            layout="@layout/mx_include_one_button_layout_bottom" />
    </LinearLayout>
</LinearLayout>