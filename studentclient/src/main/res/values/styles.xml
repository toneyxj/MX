<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="NoTitleDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="titleTextView">
        <item name="android:background">@drawable/qimu_backgroundshape_selected</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorWihte</item>
        <item name="android:height">80dp</item>
    </style>

    <style name="information_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/moxi_text_size_26</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="information_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorgray50</item>
        <item name="android:textSize">@dimen/moxi_text_size_26</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="textSise">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="textSiseRadioButton">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>
