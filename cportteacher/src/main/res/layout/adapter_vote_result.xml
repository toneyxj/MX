<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/vote_number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/colorWihte"
    android:textSize="@dimen/moxi_text_size_24"
    android:layout_gravity="center_horizontal"
    android:text="25"
    android:gravity="center"
    android:background="@mipmap/shade_arc"/>
<TextView
    android:id="@+id/name_and_index"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/colorBlack"
    android:textSize="@dimen/moxi_text_size_20"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:text="A.小明"/>
</LinearLayout>