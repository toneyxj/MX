<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/participate_hitn_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:drawableLeft="@mipmap/hitn_lamp"
            android:drawablePadding="10dp"
            android:text="刚刚"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/moxi_text_size_18" />

        <TextView
            android:id="@+id/participate_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="22dp"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:lines="1"
            android:text="作业题目提示问题作业题目提示问题作业题目提示问题"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/moxi_text_size_18" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/participate_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="今天"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/moxi_text_size_18" />

            <TextView
                android:id="@+id/participate_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="4:16"
                android:textColor="@color/colorgray50"
                android:textSize="@dimen/moxi_text_size_16" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.moxi.CPortTeacher.view.DottedLine
        android:layout_width="match_parent"
        android:layout_height="2dp" />
</LinearLayout>