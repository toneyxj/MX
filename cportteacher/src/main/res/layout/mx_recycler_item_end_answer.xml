<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_end_position"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/img_student_avatar"
        android:gravity="center"
        android:lines="1"
        android:text="1"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/moxi_text_size_20" />

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="75dp">

        <ImageView
            android:id="@+id/img_student_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/icon_one" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_student_name"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/img_student_avatar"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="小红"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/moxi_text_size_20" />

    <TextView
        android:id="@+id/tv_complete_time"
        android:layout_width="270dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="dadadada"
        android:textColor="@color/colorBlack" />

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="75dp">

        <ImageView
            android:id="@+id/img_complete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@mipmap/complete_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_end_state"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="成功"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/moxi_text_size_20" />

</LinearLayout>