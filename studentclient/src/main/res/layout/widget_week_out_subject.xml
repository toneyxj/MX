<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="共8关"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/moxi_text_size_24" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/mx_img_weed_out_level_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorWihte"
            android:textSize="@dimen/moxi_text_size_26" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/mx_img_weed_out_arro_next" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/mx_img_weed_out_level_bg"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/colorWihte"
            android:textSize="@dimen/moxi_text_size_26" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/mx_img_weed_out_arro_next" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/mx_img_weed_out_level_bg"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/colorWihte"
            android:textSize="@dimen/moxi_text_size_26" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/mx_img_weed_out_arro_next" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/mx_img_weed_out_level_bg"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/colorWihte"
            android:textSize="@dimen/moxi_text_size_26" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/mx_img_weed_out_level_bg"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/colorWihte"
            android:textSize="@dimen/moxi_text_size_26" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/mx_img_weed_out_arro_next" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/mx_img_weed_out_level_bg"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/colorWihte"
            android:textSize="@dimen/moxi_text_size_26" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/mx_img_weed_out_arro_next" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/mx_img_weed_out_level_bg"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/colorWihte"
            android:textSize="@dimen/moxi_text_size_26" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/mx_img_weed_out_arro_next" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/mx_img_weed_out_level_bg"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/colorWihte"
            android:textSize="@dimen/moxi_text_size_26" />


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:background="@drawable/classfiy_backphoto"
            android:gravity="center"
            android:text="闯关规则：正确即可进入下一关"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/moxi_text_size_24" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="80dp">

        <Button
            android:id="@+id/start_subjct_but"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/big_button"
            android:gravity="center"
            android:text="开始答题"
            android:textColor="@color/colorWithe"
            android:textSize="@dimen/moxi_text_size_24" />
    </RelativeLayout>
</LinearLayout>