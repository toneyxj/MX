<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWihte">

    <RelativeLayout
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="30dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_write_home_work_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:text="1.x是任意有理数，则2|x|+x的值是(   )"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/moxi_text_size_22" />

            <RelativeLayout
                android:id="@+id/select_info"
                android:layout_below="@+id/tv_write_home_work_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/answers_riadio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:visibility="gone"
                        android:id="@+id/radio_answer_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWihte"
                        android:button="@null"
                        android:drawableLeft="@drawable/mx_selector_menu"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:minHeight="40dp"
                        android:text="A 我是答案A"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/moxi_text_size_20" />

                    <RadioButton
                        android:visibility="gone"
                        android:id="@+id/radio_answer_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWihte"
                        android:button="@null"
                        android:drawableLeft="@drawable/mx_selector_menu"
                        android:drawablePadding="10dp"
                        android:minHeight="40dp"
                        android:text="B 我是答案B"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/moxi_text_size_20" />

                    <RadioButton
                        android:visibility="gone"
                        android:id="@+id/radio_answer_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWihte"
                        android:button="@null"
                        android:drawableLeft="@drawable/mx_selector_menu"
                        android:drawablePadding="10dp"
                        android:minHeight="40dp"
                        android:text="C 当地时间9月11日，沙特阿拉伯麦加，来自全球各地的约130万朝觐者聚集在沙特阿拉伯麦加城"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/moxi_text_size_20" />

                    <RadioButton
                        android:visibility="gone"
                        android:id="@+id/radio_answer_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWihte"
                        android:button="@null"
                        android:drawableLeft="@drawable/mx_selector_menu"
                        android:drawablePadding="10dp"
                        android:minHeight="40dp"
                        android:text="D 我是答案D"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/moxi_text_size_20" />
                </RadioGroup>
            </RelativeLayout>

            <TextView
                android:id="@+id/show_info"
                android:text="查看解析"
                android:background="@drawable/show_subject"
                android:textColor="#ffffff"
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/show_info_rel"
            android:layout_below="@+id/info"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/right_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            
            <TextView
                android:id="@+id/sum_answer"
                android:layout_below="@+id/right_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/answer"
                android:layout_below="@+id/sum_answer"
                android:layout_margin="20dip"
                android:background="#e0e0e0"
                android:text="akjshdkahsdkahskdhakhdkahsdkhaskdhkasjhdkjhasjk
                dhkjahskdhaksjhdkjahsdkjhjkahsd
                kjhasjkdhkajshdkajhskdjhakjshdkjahsdkjhaksjdhkajhsdkjhaskdjh
                kajhsdkjhasdh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:layout_below="@+id/show_info_rel"
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/moxi_shape_dash_gray_1dp" />

    </RelativeLayout>
</RelativeLayout>