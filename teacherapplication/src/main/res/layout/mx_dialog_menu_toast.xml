<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_home_work_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrayish"
        android:orientation="vertical"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/radio_btn_all"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorGrayish"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/mx_selector_menu"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="全部" />

        <RadioButton
            android:id="@+id/radio_btn_no_download"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorGrayish"
            android:button="@null"
            android:checked="false"
            android:drawableLeft="@drawable/mx_selector_menu"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="未下载" />

        <RadioButton
            android:id="@+id/radio_btn_not_done"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorGrayish"
            android:button="@null"
            android:checked="false"
            android:drawableLeft="@drawable/mx_selector_menu"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="未完成" />

        <RadioButton
            android:id="@+id/radio_btn_done"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorGrayish"
            android:button="@null"
            android:checked="false"
            android:drawableLeft="@drawable/mx_selector_menu"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="已完成" />

        <RadioButton
            android:id="@+id/radio_btn_review"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorGrayish"
            android:button="@null"
            android:checked="false"
            android:drawableLeft="@drawable/mx_selector_menu"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="已批复" />
    </RadioGroup>
</LinearLayout>