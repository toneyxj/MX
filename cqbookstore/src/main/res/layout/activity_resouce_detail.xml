<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resouce_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mx.cqbookstore.activity.ResouceDetailActivity">
    <!--title-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:onClick="cartList"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35dp"
                style="@style/book_title"
                android:text="购物车"/>
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/carlist_ico"
                android:layout_toLeftOf="@id/tv"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:onClick="goBack">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mx_img_back"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/title"
                style="@style/book_title"
                android:text="bookTitle"
                android:singleLine="true"
                android:maxWidth="400dp"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv"/>

        </RelativeLayout>


    </RelativeLayout>
    <!--body-->
    <LinearLayout
        android:id="@+id/body_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="65dp"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/item_ly"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="235dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="154dp"
                android:layout_height="210dp">
                <ImageView
                    android:id="@+id/book_ico"
                    android:layout_width="154dp"
                    android:layout_height="210dp"
                    android:src="@mipmap/error"/>
                <com.mx.cqbookstore.view.ProgressArcView
                    android:id="@+id/dprogress_pa"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:paddingRight="20dp"
                android:paddingLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/book_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="book title"
                    style="@style/book_title"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/author_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            style="@style/book_author"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="作者: 钱钟书">
                        </TextView>
                        <TextView
                            android:id="@+id/isbn_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:singleLine="true"
                            style="@style/book_author"
                            android:text="ISBN:978-7-229-04899-0">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/publischer_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            style="@style/book_author"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="出版社: 人民出版社">
                        </TextView>
                        <TextView
                            android:id="@+id/pubTime_tv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            style="@style/book_author"
                            android:text="出版年月: 2010-01">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/free_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    style="@style/book_title"
                    android:text="免费"
                    android:visibility="gone"/>
                <LinearLayout
                    android:id="@+id/price_ll"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/book_title"
                        android:text="特价:"/>
                    <TextView
                        android:id="@+id/low_price_tv"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        style="@style/book_title"
                        android:text="￥9.90"/>
                    <TextView
                        android:id="@+id/org_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/book_author"
                        android:text="原价:  ￥19.90"
                        android:visibility="invisible"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/unsupport_tv"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    style="@style/book_author"
                    android:text="此书籍不支持该设备"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/freedownload_tv"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/selector_tep_bg"
                    android:text="下载"
                    android:textColor="@color/colorWihte"
                    android:gravity="center"
                    android:clickable="true"
                    android:onClick="freeDownload"
                    android:textSize="@dimen/moxi_text_size_24"
                    android:visibility="gone"/>
                <RelativeLayout
                    android:id="@+id/btns_rl"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:id="@+id/btn1_tv"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_detail_btn_bg"
                        android:text="试读"
                        android:textColor="@color/colorWihte"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="tryDownload"
                        android:textSize="@dimen/moxi_text_size_24"/>

                    <TextView
                        android:id="@+id/btn2_tv"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_detail_btn_bg"
                        android:text="购买"
                        android:textColor="@color/colorWihte"
                        android:gravity="center"
                        android:clickable="true"
                        android:onClick="allDownload"
                        android:layout_toRightOf="@id/btn1_tv"
                        android:layout_marginLeft="40dp"
                        android:textSize="@dimen/moxi_text_size_24"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/buyed_rl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/btn3_tv"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_tep_bg"
                        android:text="阅读"
                        android:textColor="@color/colorWihte"
                        android:gravity="center"
                        android:clickable="true"
                        android:textSize="@dimen/moxi_text_size_24"/>

                    <TextView
                        android:id="@+id/btn4_tv"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_tep_bg"
                        android:text="删除"
                        android:textColor="@color/colorWihte"
                        android:gravity="center"
                        android:clickable="true"
                        android:layout_toRightOf="@id/btn3_tv"
                        android:layout_marginLeft="40dp"
                        android:textSize="@dimen/moxi_text_size_24"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp"
            android:background="@color/deliver_grey">
            <TextView
                android:id="@+id/like_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                style="@style/book_author"
                android:clickable="true"
                android:onClick="addFavor"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@mipmap/favor_nomal"
                android:text=" 收藏"/>
            <TextView
                android:id="@+id/addcarlist_tv"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                style="@style/book_author"
                android:clickable="true"
                android:onClick="addCarlist"
                android:layout_toRightOf="@id/like_tv"
                android:drawableLeft="@mipmap/bought_ico"
                android:text=" 加入购物车"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                style="@style/book_title"
                android:gravity="center"
                android:text="内容摘要"/>
            <ProgressBar
                android:id="@+id/probtion_pd"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/abstract_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/moxi_text_size_22"
                android:text="       那天是不可能再去散步了。我们早上已经到那片树叶早已落尽的灌木丛当中去闲逛过。没有客人的时候，里德太太的午饭总会开得很早，饭后，黑沉沉的乌云和那冰凉刺骨的冷雨被冬天凛冽的寒风刮了过来，要想再去户外活动已经是彻底不可能的"
                android:ellipsize="end"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/error_reflash_layout"
        android:id="@+id/error_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</RelativeLayout>
