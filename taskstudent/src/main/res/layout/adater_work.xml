<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/di_white_bian_font"
    android:padding="2dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/work_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="5"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:lineSpacingExtra="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/moxi_text_size_20" />

    <TextView
        android:id="@+id/status"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@mipmap/rectangle"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="未提交"
        android:textColor="@color/colorWihte"
        android:textSize="@dimen/moxi_text_size_22" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorBlack" />

    <Button
        android:id="@+id/onclick_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/arc_big_di_black"
        android:text="提交"
        android:textColor="@color/colorWihte"
        android:textSize="@dimen/moxi_text_size_22" />
</LinearLayout>