<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/title"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageView
            android:src="@mipmap/stu_icon"
            android:layout_toLeftOf="@+id/title_tx"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/title_tx"
            android:text="学生名单 （共46人）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.mx.mxbase.view.NoGridView
        android:id="@+id/sec_grid"
        android:scrollbars="none"
        android:numColumns="7"
        android:layout_marginTop="10dp"
        android:horizontalSpacing="15dip"
        android:listSelector="#00000000"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.mx.mxbase.view.NoGridView>


    <RelativeLayout
        android:id="@+id/booo"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pages"
            android:text="1/3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <Button
        android:id="@+id/send"
        android:text="结束答题"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/booo"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="@drawable/sender_backgroundshape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>